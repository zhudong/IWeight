<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/commodity_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="白菜"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/commodity_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5.600"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/commodity_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/commodity_weight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.26"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/commodity_subtotal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.30"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:layout_weight="1"
            android:id="@+id/commodity_delete_btn"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_weight_display_bg"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/string_delete" />
    </LinearLayout>
</LinearLayout>
